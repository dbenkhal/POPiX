dt = 0.1;
kp = 2.3129;
ki = 0.8818; 
kd = 0.4127;
setPoint = 10.0;
measure = 8.0; 
error = 0.0;
p = 0.0;
i = 0.0;
d = 0.0;
response = 0.0;
oldError = 0.0;
t = 0.0;
 
while (t < 50.0) {
	error = setPoint - measure;
    p = kp * error;
    i = i + ki * dt * error;
 	d = kd  * (error - oldError) / dt;
    response = p + i + d;
    measure = measure + response* 0.01;
    oldError = error;
   	t = t + dt;
               
};
require_nsb(measure,31);