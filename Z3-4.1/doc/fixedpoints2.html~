<h1><a class="anchor" id="fixedpoints2">Fixed-points </a></h1><div class="fragment"><pre class="fragment">Z 64

<span class="preprocessor"># ^^^ domain declaration must be followed by an empty line in the Bddbddb format</span>
<span class="preprocessor"></span>

Geq0(x : Z, y : Z) input
Geq(x : Z, y : Z) printtuples
Gt(x : Z, y : Z) printtuples

Eq(x : Z, y : Z) printtuples

<span class="preprocessor"># Reflexive reduction of the equivalence relation</span>
<span class="preprocessor"></span>NontrivEq(x : Z, y : Z) printtuples

Minimal(x : Z) printtuples
Maximal(x : Z) printtuples

GtTrans(x : Z, y : Z)

<span class="preprocessor"># Transitive reduction of the Gt relation</span>
<span class="preprocessor"></span>GtTransRed(x : Z, y : Z) printtuples

Geq(x,y) :- Geq0(x,y).
Geq(x,y) :- Geq(x,z), Geq(z,y).

#We want reflexivity only on elements that are already in the relation.
#Otherwise we would have just <span class="stringliteral">&quot;Geq(x,x).&quot;</span>
Geq(x,x) :- Geq(x,_).
Geq(x,x) :- Geq(_,x).

Eq(x,y) :- Geq(x,y), Geq(y,x).

NontrivEq(x,y) :- Eq(x,y), x != y.

Gt(x,y) :- Geq(x,y), !Eq(x,y).

#<span class="stringliteral">&quot;Geq(_,x)&quot;</span> here ensures that x appears in the relation
Minimal(x) :- Geq(_,x), !Gt(x,_).
Maximal(x) :- Geq(x,_), !Gt(_,x).

GtTrans(x,y) :- Gt(x,z), Gt(z,y).
GtTransRed(x,y) :- Gt(x,y), !GtTrans(x,y).


Geq0(<span class="stringliteral">&quot;a&quot;</span>,<span class="stringliteral">&quot;b&quot;</span>).
Geq0(<span class="stringliteral">&quot;b&quot;</span>,<span class="stringliteral">&quot;c&quot;</span>).
Geq0(<span class="stringliteral">&quot;c&quot;</span>,<span class="stringliteral">&quot;d&quot;</span>).
Geq0(<span class="stringliteral">&quot;a1&quot;</span>,<span class="stringliteral">&quot;a&quot;</span>).
Geq0(<span class="stringliteral">&quot;a&quot;</span>,<span class="stringliteral">&quot;a1&quot;</span>).
Geq0(<span class="stringliteral">&quot;a2&quot;</span>,<span class="stringliteral">&quot;a&quot;</span>).
Geq0(<span class="stringliteral">&quot;a&quot;</span>,<span class="stringliteral">&quot;a2&quot;</span>).
</pre></div> </div>
